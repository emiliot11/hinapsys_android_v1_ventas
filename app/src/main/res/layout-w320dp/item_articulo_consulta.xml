<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0001"
        android:id="@+id/textView_listaArticuloConsulta_codigo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        />

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NOMBRE DEL ARTICULO"
        android:id="@+id/textView_listaArticuloConsulta_descripcion"
        android:layout_alignTop="@+id/textView_listaArticuloConsulta_codigo"
        android:layout_toRightOf="@+id/textView_listaArticuloConsulta_codigo"
        android:paddingLeft="2dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        />

    <TextView
        android:id="@+id/textView_listaArticuloConsulta_precio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="20dp"
        android:paddingLeft="2dp"
        android:paddingTop="20dp"
        android:text="PRECIO"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textView_listaArticuloConsulta_descripcion"
        android:layout_alignRight="@+id/textView_listaArticuloConsulta_descripcion"
        android:layout_alignEnd="@+id/textView_listaArticuloConsulta_descripcion" />

    <TextView
        android:id="@+id/textView_listaArticuloConsulta_cantidadExistencia"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_listaArticuloConsulta_precio"
        android:layout_below="@+id/textView_listaArticuloConsulta_descripcion"
        android:layout_toLeftOf="@+id/textView_listaArticuloConsulta_precio"
        android:layout_toStartOf="@+id/textView_listaArticuloConsulta_precio"
        android:gravity="right"
        android:paddingBottom="20dp"
        android:paddingLeft="2dp"
        android:paddingTop="20dp"
        android:text="STOCK"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>
