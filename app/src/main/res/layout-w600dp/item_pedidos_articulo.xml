<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingTop="10dp"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="A120514"
        android:id="@+id/textView_listaPedidosArticulo_codigo"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NOMBRE DEL PRODUCTO"
        android:id="@+id/textView_listaPedidosArticulo_descripcion"
        android:layout_toEndOf="@+id/textView_listaPedidosArticulo_codigo"
        android:layout_alignTop="@+id/textView_listaPedidosArticulo_codigo"
        android:layout_toRightOf="@+id/textView_listaPedidosArticulo_codigo"
        android:padding="15dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10"
        android:id="@+id/textView_listaPedidosArticulo_cantidad"
        android:padding="15dp"
        android:layout_below="@+id/textView_listaPedidosArticulo_descripcion"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:gravity="right"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1000"
        android:id="@+id/textView_listaPedidosArticulo_precio"
        android:paddingRight="15dp"
        android:layout_below="@+id/textView_listaPedidosArticulo_cantidad"
        android:layout_alignRight="@+id/textView_listaPedidosArticulo_cantidad"
        android:layout_alignEnd="@+id/textView_listaPedidosArticulo_cantidad" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10000%"
        android:id="@+id/textView_listaPedidosArticulo_porcDescuento"
        android:padding="15dp"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView2"
        android:gravity="right"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1.000.000"
        android:paddingRight="15dp"
        android:id="@+id/textView_listaPedidosArticulo_total"
        android:gravity="right"
        android:layout_below="@+id/textView_listaPedidosArticulo_porcDescuento"
        android:layout_alignRight="@+id/textView_listaPedidosArticulo_porcDescuento"
        android:layout_alignEnd="@+id/textView_listaPedidosArticulo_porcDescuento" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CANTIDAD:"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:id="@+id/textView"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_alignBaseline="@+id/textView_listaPedidosArticulo_cantidad"
        android:layout_alignBottom="@+id/textView_listaPedidosArticulo_cantidad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DESCUENTO:"
        android:textStyle="normal|bold"
        android:gravity="center_vertical"
        android:id="@+id/textView2"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_alignBaseline="@+id/textView_listaPedidosArticulo_porcDescuento"
        android:layout_alignBottom="@+id/textView_listaPedidosArticulo_porcDescuento"
        android:layout_toRightOf="@+id/textView_listaPedidosArticulo_cantidad"
        android:layout_toEndOf="@+id/textView_listaPedidosArticulo_cantidad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PRECIO:"
        android:textStyle="normal|bold"
        android:gravity="center_vertical"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView_listaPedidosArticulo_cantidad"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignBottom="@+id/textView_listaPedidosArticulo_precio" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TOTAL:"
        android:textStyle="normal|bold"
        android:gravity="center_vertical"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView_listaPedidosArticulo_cantidad"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />


</RelativeLayout>
